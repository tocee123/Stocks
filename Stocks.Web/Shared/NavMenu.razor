@code {

    [Parameter]
    public EventCallback<bool> SetCollapse { get; set; }

    private bool collapseNavMenu;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "showElements";
    
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        SetCollapse.InvokeAsync(collapseNavMenu);
    }

    protected override async Task OnInitializedAsync()
    {
        collapseNavMenu = false;
    }
}
